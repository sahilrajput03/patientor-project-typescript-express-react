{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,/* this is just for a minute testing... */
    "noEmit": true,
    "jsx": "react",
    "downlevelIteration": true,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "src"
  ]
}
